<Window x:Class="MultiLanguageHelloWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiLanguageHelloWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Center">
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label FontSize="20" Name="DateLabel" HorizontalAlignment="Right">Hello World at </Label>
            <Label FontSize="20" Name="DateValue" HorizontalAlignment="Left" Grid.Column="1">00:00:0000 00:00</Label>
        </WrapPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Tag="en-US" Click="Button_Click" Content="English (US)" Margin="0,0,5,0" FontSize="20"/>
            <Button Tag="pt-BR" Click="Button_Click" Content="Português (BR)" Margin="5,0,0,0" FontSize="20"/>
        </StackPanel>
    </StackPanel>
</Window>
